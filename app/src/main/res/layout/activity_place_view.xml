            <!--Create seperate layout so the height is the whole parent for the picture-->
            <ImageView
                android:layout_width="45dp"
                android:layout_height="48dp"
                android:gravity="top"
                android:paddingTop="0dp"
                android:src="@drawable/face1" />
        </LinearLayout>


