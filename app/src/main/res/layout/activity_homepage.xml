<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bryan.studybuddies.homepage">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        tools:context="com.example.bryan.studybuddies.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="STUDYBUDDIES"
            android:fontFamily="@font/bangers"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="70sp"
            android:id="@+id/mainlogo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="275dp"
            android:maxHeight="90dp"
            android:maxWidth="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo2"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class List:"
            android:textColor="@android:color/black"

            android:fontFamily="@font/bangers"
            android:textSize="50dp"
            android:layout_marginTop="50dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CS 465"
            android:textSize="45dp"
            android:fontFamily="@font/bangers"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="buttonClickFunction"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANTH 399"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bangers"
            android:textSize="45dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginTop="45dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADV 120"
            android:textSize="45dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bangers"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="45dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUS 199"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bangers"
            android:background="@android:color/holo_blue_dark"
            android:textSize="45dp"
            android:layout_marginTop="45dp"
            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/plusbutton2"
            android:background="@null"
            android:onClick="buttonClickSearchFunction"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/contacticon"
            android:background="@null"
            android:onClick="buttonClickContactFunction"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
